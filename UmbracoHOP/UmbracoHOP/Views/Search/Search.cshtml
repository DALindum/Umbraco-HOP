<form asp-controller="Search" asp-action="Search" >
    <div class="search_row">

        <div class="search_box">
            @Html.DropDownList("SearchOptions", new SelectList(Enum.GetValues(typeof(SearchOptions))), "Select Filter")
        </div>

        <div class="SearchFromDateText">
            <p>Start Date: </p>
        </div>

        <div class="SearchFromDateBtn">
            <input class="DateFrom" type="date">
        </div>


        <div class="SearchToDateText">
            <p>End Date: </p>
        </div>

        <div class="SearchToDateBtn">
            <input class="DateFrom" type="date">
        </div>

        <div class="SearchText">
            <input type="text" name="SearchString" value="@ViewData["SearchString"]"/>
        </div>

        <div class="SearchButton">
            <input type="submit" value="SearchString" class="btn btn-primary"/>
        </div>

        <div class="SearchExport">
            <input type="submit" value="Export"/>
        </div>
    </div>
</form>

<!-- INFO BOX -->
<div class="info_box">
    <div class="box">
        <h2>Total Instances</h2>
        <hr>
    </div>
</div>

<div class="spacer">
    <hr>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr>
        <th>
            Continent
        </th>
        <th>
            Country
        </th>
        <th>
            City
        </th>
        <th>
            Packages
        </th>
        <th>
            Version
        </th>
        <th>
            Date
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td>
                @obj.Continent
            </td>
            <td>
                @obj.Country
            </td>
            <td>
                @obj.City
            </td>
            <td>
                @obj.Package
            </td>
            <td>
                @obj.Version
            </td>
            <td>
                @obj.Date
            </td>
        </tr>
    }
    </tbody>

</table>

</body>
</html>