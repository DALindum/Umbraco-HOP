@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/Login.css"/>
    <title>title</title>
</head>
<body>

<form asp-controller="Login" asp-action="Login" method="post">
    <div>
        <img src="/Images/umbraco_logo.png" alt="Umbraco Logo">

        <div class="loginBox">
            <div class="loginUsername">
                <p>Username</p>
                <input asp-for="Username" class="form-control" type="text" placeholder="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="loginPassword">
                <p>Password</p>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
    
            <a style="color:red">@ViewBag.ErrorMessage</a>
            
            <div class="loginButton">
                <button asp-controller="Login">Login</button>
            </div>
        </div>
    </div>
</form>

</body>
</html>